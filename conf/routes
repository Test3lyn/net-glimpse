# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.Assets.at(path="/public", file="index.html")
GET     /glimps                     controllers.Assets.at(path="/public", file="glimps.html")
GET     /ipglimps                   controllers.Assets.at(path="/public", file="ipglimps.html")
GET     /etherglimps                controllers.Assets.at(path="/public", file="etherglimps.html")
GET     /netdata                    controllers.HomeController.netdata(nif ?= null)

GET     /assets/glimps.conf         controllers.ExtAssets.versioned(filePath="conf/glimps.conf")

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
